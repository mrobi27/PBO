<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashboardMemberControll"
            fx:id="rootPane"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: #f7f7f7;">

    <!-- Bagian atas (navbar + tombol navigasi) -->
    <top>
        <VBox>
            <!-- Navbar -->
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: #800000; -fx-padding: 10;">
                <ImageView fitHeight="50" preserveRatio="true">
                    <image>
                        <Image url="@../resources/images/logo.png"/>
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Tombol navigasi -->
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                <Button text="🏠 Home" fx:id="homeBtn"
                        style="-fx-pref-width: 194px;
                               -fx-pref-height: 42px;
                               -fx-background-radius: 16;
                               -fx-background-color: linear-gradient(to right, #8B0000, #E53935);
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;"/>
                <Button text="📚 Books" fx:id="booksBtn"
                        style="-fx-pref-width: 194px;
                               -fx-pref-height: 42px;
                               -fx-background-radius: 16;
                               -fx-background-color: linear-gradient(to right, #8B0000, #E53935);
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;"/>
                <Button text="📖 Borrow Book" fx:id="borrowBtn"
                        style="-fx-pref-width: 194px;
                               -fx-pref-height: 42px;
                               -fx-background-radius: 16;
                               -fx-background-color: linear-gradient(to right, #8B0000, #E53935);
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;"/>
                <Button text="📋 History" fx:id="historyBtn"
                        style="-fx-pref-width: 194px;
                               -fx-pref-height: 42px;
                               -fx-background-radius: 16;
                               -fx-background-color: linear-gradient(to right, #8B0000, #E53935);
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;"/>
                <Button text="🔒 Logout" fx:id="logoutBtn"
                        style="-fx-pref-width: 194px;
                               -fx-pref-height: 42px;
                               -fx-background-radius: 16;
                               -fx-background-color: linear-gradient(to right, #8B0000, #E53935);
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Konten utama -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 100 30 30 30;">
            <HBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 0 60;">
                <!-- Bagian kiri -->
                <VBox spacing="10" alignment="TOP_LEFT">
                    <Label text="📖 Books Currently Borrowed:"
                           style="-fx-pref-width: 380px;
                              -fx-pref-height: 42px;
                              -fx-background-color: linear-gradient(to right, #8B0000, #E53935);
                              -fx-text-fill: white;
                              -fx-font-size: 16px;
                              -fx-font-weight: bold;
                              -fx-alignment: CENTER_LEFT;
                              -fx-background-radius: 8;
                              -fx-padding: 0 0 0 10;"/>
                    <ListView fx:id="borrowedBooksList" prefHeight="200" prefWidth="380"/>
                </VBox>

                <!-- Bagian kanan -->
                <VBox spacing="10" alignment="TOP_LEFT">
                    <Label text="⏳ Return Book List:"
                           style="-fx-pref-width: 380px;
                              -fx-pref-height: 42px;
                              -fx-background-color: linear-gradient(to right, #8B0000, #E53935);
                              -fx-text-fill: white;
                              -fx-font-size: 16px;
                              -fx-font-weight: bold;
                              -fx-alignment: CENTER_LEFT;
                              -fx-background-radius: 8;
                              -fx-padding: 0 0 0 10;"/>
                    <ListView fx:id="returnBook" prefHeight="200" prefWidth="380"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #3e3e3e, #000000); -fx-padding: 15;">
            <Label text="University of Muhammadiyah Malang"
                   style="-fx-text-fill: lavender; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>
